{
  "name": "discipline-app",
  "version": "1.0.0",
  "description": "Frontend assets for Discipline App",
  "scripts": {
    "build": "tailwindcss -i ./src/main/resources/static/css/input.css -o ./src/main/resources/static/css/styles.css --minify",
    "build-prod": "cross-env NODE_ENV=production tailwindcss -i ./src/main/resources/static/css/input.css -o ./src/main/resources/static/css/styles.css --minify",
    "watch": "tailwindcss -i ./src/main/resources/static/css/input.css -o ./src/main/resources/static/css/styles.css --watch"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "cross-env": "^7.0.3",
    "tailwindcss": "^4.0.15"
  }
}
